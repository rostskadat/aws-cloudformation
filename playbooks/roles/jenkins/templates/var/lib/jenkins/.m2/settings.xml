<!-- Taken from https://docs.sonarqube.org/display/SCAN/Analyzing+with+SonarQube+Scanner+for+Maven -->
<settings>
  <pluginGroups>
    <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
  </pluginGroups>
  <mirrors>
    <mirror>
      <id>artifactory</id>
      <name>Artifactory</name>
      <url>http://{{ArtifactoryDNSName}}/artifactory/repo</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
  </mirrors>
  <servers>
    <server>
      <id>artifactory</id>
      <username>{{ArtifactoryAdminUsername}}</username>
      <password>{{ArtifactoryAdminPassword}}</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <sonar.host.url>http://{{SonarqubeDNSName}}</sonar.host.url>
        <sonar.login>{{SonarqubeAdminUsername}}</sonar.login>
        <sonar.password>{{SonarqubeAdminPassword}}</sonar.password>
      </properties>
      <repositories>
        <repository>
          <id>libs-releases-local</id>
          <snapshots><enabled>false</enabled></snapshots>
          <name>libs-releases-local</name>
          <url>http://{{ArtifactoryDNSName}}/artifactory/libs-releases-local</url>
        </repository>
        <repository>
          <id>libs-snapshots-local</id>
          <name>libs-snapshots-local</name>
          <url>http://{{ArtifactoryDNSName}}/artifactory/libs-snapshots-local</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>plugins-releases-local</id>
          <snapshots><enabled>false</enabled></snapshots>
          <name>plugins-releases-local</name>
          <url>http://{{ArtifactoryDNSName}}/artifactory/plugins-releases-local</url>
        </pluginRepository>
        <pluginRepository>
          <id>plugins-snapshots-local</id>
          <name>plugins-snapshots-local</name>
          <url>http://{{ArtifactoryDNSName}}/artifactory/plugins-snapshots-local</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
</settings>
